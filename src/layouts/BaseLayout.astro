---
// Components
import { Navs } from '@/components';

// Icons
import { CubeTransparentIcon } from '@heroicons/react/24/solid';

// Utils
import { generateId } from '@/utils';

// Styles
import '@/styles/global.css';

interface Props {
  title: string;
  currentRoute: string;
}

const { title, currentRoute } = Astro.props;

const routes: Routes = [
  {
    id: generateId(),
    txt: 'Beranda',
    href: '/',
  },

  {
    id: generateId(),
    txt: 'Profil',
    href: '/profil',
  },

  {
    id: generateId(),
    txt: 'Produk',
    href: '/produk',
  },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-base-main">
    <!-- Navbar -->
    <div
      class="flex flex-wrap sm:justify-start sm:flex-nowrap z-50 w-full py-4 text-sm"
    >
      <nav
        class="font-quicksand max-w-[85rem] w-full mx-auto px-6 flex items-center justify-between"
        aria-label="Global"
      >
        {/* Brand Area */}
        <div class="w-max flex items-center gap-x-2 justify-between">
          <CubeTransparentIcon className="w-6 h-6" />
          <a class="text-xl font-semibold w-max" href="#"> Batik Blimbing</a>
        </div>

        {/* Navitems */}
        <Navs
          currentActiveRoute={currentRoute}
          routes={routes}
          client:only="react"
        />
      </nav>
    </div>

    <!-- Children -->
    <slot />
  </body>
</html>
