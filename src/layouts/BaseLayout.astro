---
// Components
import { Navs } from '@/components';

// Icons
import brand from '@/assets/brand.png';

// Utils
import { generateId } from '@/utils';
import { Image } from '@astrojs/image/components';

// Styles
import '@/styles/global.css';

interface Props {
  title: string;
  currentRoute: string;
}

const { title, currentRoute } = Astro.props;

const routes: Routes = [
  {
    id: generateId(),
    txt: 'Beranda',
    href: '/',
  },

  {
    id: generateId(),
    txt: 'Profil',
    href: '/profil',
  },

  {
    id: generateId(),
    txt: 'Produk',
    href: '/produk',
  },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-neutral-bg">
    <div
      class="flex flex-wrap sm:justify-start sm:flex-nowrap w-full py-4 text-sm bg-neutral-bg"
    >
      <nav
        class="font-quicksand max-w-[85rem] w-full mx-auto px-6 flex items-center justify-between"
        aria-label="Global"
      >
        <div class="w-max flex items-center gap-x-2 justify-between">
          <Image src={brand} alt="Brand Batik Blimbing" class={'w-8 h-8'} />
          <a class="text-xl font-semibold min-w-max" href="#">
            Batik Blimbing</a
          >
        </div>

        <Navs
          currentActiveRoute={currentRoute}
          routes={routes}
          client:only="react"
        />
      </nav>
    </div>

    <slot />
  </body>
</html>
