---
// lib
import { Image } from '@astrojs/image/components';

interface Props {
  foregroundImg: {
    src: ImageMetadata;
    alt: string;
  };

  backgroundImg: {
    src: ImageMetadata;
    alt: string;
  };

  productName: string;
}

const {
  backgroundImg,
  foregroundImg,
  productName = 'Judul Product',
} = Astro.props;
---

<div
  class="group w-full relative block rounded-md overflow-hidden font-quicksand"
>
  <div class="relative h-[350px] sm:h-[450px] transition-all">
    <Image
      src={foregroundImg.src}
      alt={foregroundImg.alt}
      width={foregroundImg.src.width}
      height={foregroundImg.src.height}
      class="absolute inset-0 h-full w-full object-cover opacity-100 group-hover:opacity-0 duration-500"
    />

    <Image
      src={backgroundImg.src}
      width={foregroundImg.src.width}
      height={foregroundImg.src.height}
      alt={backgroundImg.alt}
      class="absolute inset-0 h-full w-full object-cover opacity-0 group-hover:opacity-100 duration-500"
    />
  </div>

  <div
    class="absolute inset-0 flex flex-col items-start justify-end p-6 bg-transparent"
  >
    <h3 class="text-xl font-medium text-white">{productName}</h3>

    <p class="mt-1.5 max-w-[40ch] text-xs text-white">
      <slot> Deskripsi Product</slot>
    </p>

    <a
      class="mt-3 inline-block bg-black px-5 py-3 text-xs font-medium uppercase tracking-wide text-white"
    >
      Cek Stok
    </a>
  </div>
</div>
